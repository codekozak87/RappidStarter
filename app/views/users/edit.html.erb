<h1>Editing User #<%= @user.id %></h1>


<%= form_tag(user_url(@user), method: 'put') do %>

  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name, @user.name %>
  </div>

  <div>
    <%= label_tag :user_discipline %><br />
    <%= number_field_tag :user_discipline, @user.user_discipline %>
  </div>

  <div>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, @user.email %>
  </div>

  <div>
    <%= label_tag :voted_on %><br />
    <%= text_field_tag :voted_on, @user.voted_on %>
  </div>

  <div>
    <%= label_tag :accountable_for %><br />
    <%= text_field_tag :accountable_for, @user.accountable_for %>
  </div>

  
  <div>
    <%= submit_tag "Update User" %>
  </div>

<% end %>
