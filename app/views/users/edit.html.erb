<h1>Editing User #<%= @user.id %></h1>


<%= form_tag(user_url(@user), method: 'put') do %>

  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name, @user.name %>
  </div>

  <div>
    <%= label_tag :user_discipline %><br />
    <select name="user_discipline">
      <option value=<% @user.user_discipline %> selected>User Experience</option>
      <option value="UX" selected>User Experience</option>
      <option value="Viz_Design">Visual Design</option>
      <option value="Front_End "> Front-End(HTML/CSS)</option>
      <option value="Back_End">Back-End (Web Dev)</option>
  </select>
    <%= text_field_tag :user_discipline, @user.user_discipline %>
  </div>

  <div>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, @user.email %>
  </div>

  <div>
    <%= label_tag :voted_on %><br />
    <%= text_field_tag :voted_on, @user.voted_on %>
  </div>

  <div>
    <%= label_tag :accountable_for %><br />
    <%= text_field_tag :accountable_for, @user.accountable_for %>
  </div>

  
  <div>
    <%= submit_tag "Update User" %>
  </div>

<% end %>
